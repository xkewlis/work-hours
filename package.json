{
  "name": "work-hours",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll --verbose",
    "test:ci": "jest --coverage --verbose",
    "dev": "cross-env tsnd --respawn --clear -r tsconfig-paths/register src/app.ts",
    "pm2": "pm2 start src/app.ts --name work-hours --interpreter ./node_modules/.bin/ts-node --node-args=\"-r tsconfig-paths/register --project tsconfig.json\" --watch --env development && pm2 logs",
    "build": "rimraf ./dist && tsc && tsc-alias && echo 'Copying HTML files...' && cpx \"src/**/*.html\" dist/ ",
    "start": "npm run build && node -r module-alias/register dist/app.js"
  },
